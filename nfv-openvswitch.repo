[centos-nfv-openvswitch]
name=CentOS-$releasever - NFV OpenvSwitch
#baseurl=http://mirror.centos.org/centos/$cloudsigdist/nfv/$basearch/openvswitch-2/
mirrorlist=http://mirrorlist.centos.org/?release=$cloudsigdist&arch=$basearch&repo=nfv-openvswitch-2
gpgcheck=1
enabled=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-SIG-NFV
module_hotfixes=1

[centos-nfv-openvswitch-testing]
name=CentOS-$releasever - NFV OpenvSwitch Testing
baseurl=http://buildlogs.centos.org/centos/$cloudsigdist/nfv/$basearch/openvswitch-2/
gpgcheck=0
enabled=0
module_hotfixes=1
